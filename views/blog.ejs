  <script>
      Swal.fire({
          title:'<%= alertTitle %>',
          text:'<%= alertMessage %>',
          icon:'<%= alertIcon %>',
          showConfirmButton: <%= showConfirmButton %>,
          timer:<%= timer %>
      }).then(()=>{
          whindow.location='/<%= ruta %>'
      })
  </script>
<% } %>